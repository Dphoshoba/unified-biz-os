// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// AUTHENTICATION (NextAuth.js)
// =============================================================================

/// User represents an individual who can access the system.
/// Users can belong to multiple organizations through memberships.
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Multi-tenant relations
  memberships Membership[]

  // User preferences
  activeOrganizationId String?

  // CRM relations
  assignedDeals     Deal[]     @relation("AssignedDeals")
  createdActivities Activity[] @relation("CreatedActivities")

  // Booking relations
  serviceProviders ServiceProvider[]
  availabilities   Availability[]
  providerBookings Booking[]         @relation("ProviderBookings")

  // Project relations
  assignedTasks Task[] @relation("AssignedTasks")

  // Drive relations
  uploadedFiles File[] @relation("UploadedFiles")

  // Invitation relations
  sentInvitations Invitation[]

  // Notification relations
  notifications Notification[]

  @@map("users")
}

/// Account stores OAuth provider connections for a user
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

/// Session stores active user sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

/// VerificationToken for email verification and password reset
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================================================
// MULTI-TENANT FOUNDATION
// =============================================================================

/// Organization represents a tenant in the multi-tenant system.
model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logo      String?
  timezone  String   @default("UTC")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Stripe Connect
  stripeAccountId String?

  // Relations
  memberships Membership[]

  // CRM relations
  contacts   Contact[]
  companies  Company[]
  deals      Deal[]
  pipelines  Pipeline[]
  tags       Tag[]
  activities Activity[]

  // Booking relations
  services Service[]
  bookings Booking[]

  // Invitation relations
  invitations Invitation[]

  // Payment relations
  products Product[]
  invoices Invoice[]

  // Automation relations
  automations Automation[]

  // Funnel relations
  funnels Funnel[]

  // Project relations
  projects Project[]

  // Document relations
  documents Document[]
  documentTemplates DocumentTemplate[]

  // Drive relations
  files File[]
  folders Folder[]

  @@map("organizations")
}

/// Membership is a join table that links Users to Organizations.
model Membership {
  id             String         @id @default(cuid())
  userId         String
  organizationId String
  role           MembershipRole @default(MEMBER)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
  @@map("memberships")
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

/// Invitation represents a pending team invitation
model Invitation {
  id             String         @id @default(cuid())
  email          String
  organizationId String
  role           MembershipRole @default(MEMBER)
  token          String         @unique @default(cuid())
  expiresAt      DateTime
  createdAt      DateTime       @default(now())
  invitedById    String

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy    User         @relation(fields: [invitedById], references: [id])

  @@unique([email, organizationId])
  @@index([token])
  @@index([organizationId])
  @@map("invitations")
}

// =============================================================================
// CRM MODELS
// =============================================================================

/// Contact represents an individual person in the CRM
model Contact {
  id             String        @id @default(cuid())
  organizationId String
  companyId      String?
  firstName      String
  lastName       String
  email          String?
  phone          String?
  title          String?
  status         ContactStatus @default(ACTIVE)
  source         String?
  avatarUrl      String?
  notes          String?       @db.Text
  customFields   Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Stripe
  stripeCustomerId String?

  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  company      Company?        @relation(fields: [companyId], references: [id], onDelete: SetNull)
  deals        Deal[]
  activities   Activity[]
  tags         TagsOnContacts[]
  documents    Document[]
  bookings     Booking[]
  invoices     Invoice[]

  @@unique([organizationId, email])
  @@index([organizationId])
  @@index([companyId])
  @@index([status])
  @@map("contacts")
}

enum ContactStatus {
  ACTIVE
  INACTIVE
  LEAD
  CUSTOMER
  CHURNED
}

/// Company represents a business/organization in the CRM
model Company {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  website        String?
  industry       String?
  size           String?
  phone          String?
  address        String?
  city           String?
  state          String?
  country        String?
  postalCode     String?
  logoUrl        String?
  notes          String?  @db.Text
  customFields   Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contacts     Contact[]
  deals        Deal[]
  activities   Activity[]
  tags         TagsOnCompanies[]
  documents    Document[]

  @@index([organizationId])
  @@map("companies")
}

/// Pipeline represents a sales pipeline with multiple stages
model Pipeline {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  isDefault      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  stages       PipelineStage[]
  deals        Deal[]

  @@index([organizationId])
  @@map("pipelines")
}

/// PipelineStage represents a stage within a pipeline
model PipelineStage {
  id          String   @id @default(cuid())
  pipelineId  String
  name        String
  color       String   @default("#3B82F6")
  order       Int
  probability Int      @default(0) // Win probability percentage
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pipeline Pipeline @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  deals    Deal[]

  @@index([pipelineId])
  @@map("pipeline_stages")
}

/// Deal represents a sales opportunity
model Deal {
  id              String     @id @default(cuid())
  organizationId  String
  pipelineId      String
  stageId         String
  contactId       String?
  companyId       String?
  assignedToId    String?
  name            String
  value           Decimal    @default(0) @db.Decimal(12, 2)
  currency        String     @default("USD")
  status          DealStatus @default(OPEN)
  expectedCloseDate DateTime?
  actualCloseDate DateTime?
  lostReason      String?
  notes           String?    @db.Text
  customFields    Json?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  pipeline     Pipeline      @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  stage        PipelineStage @relation(fields: [stageId], references: [id], onDelete: Cascade)
  contact      Contact?      @relation(fields: [contactId], references: [id], onDelete: SetNull)
  company      Company?      @relation(fields: [companyId], references: [id], onDelete: SetNull)
  assignedTo   User?         @relation("AssignedDeals", fields: [assignedToId], references: [id], onDelete: SetNull)
  activities   Activity[]
  tags         TagsOnDeals[]

  @@index([organizationId])
  @@index([pipelineId])
  @@index([stageId])
  @@index([contactId])
  @@index([companyId])
  @@index([assignedToId])
  @@index([status])
  @@map("deals")
}

enum DealStatus {
  OPEN
  WON
  LOST
}

/// Activity represents an action or event in the CRM (call, email, meeting, note, etc.)
model Activity {
  id             String       @id @default(cuid())
  organizationId String
  contactId      String?
  companyId      String?
  dealId         String?
  createdById    String
  type           ActivityType
  title          String
  description    String?      @db.Text
  scheduledAt    DateTime?
  completedAt    DateTime?
  durationMinutes Int?
  outcome        String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contact      Contact?     @relation(fields: [contactId], references: [id], onDelete: Cascade)
  company      Company?     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  deal         Deal?        @relation(fields: [dealId], references: [id], onDelete: Cascade)
  createdBy    User         @relation("CreatedActivities", fields: [createdById], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([contactId])
  @@index([companyId])
  @@index([dealId])
  @@index([createdById])
  @@index([type])
  @@map("activities")
}

enum ActivityType {
  NOTE
  CALL
  EMAIL
  MEETING
  TASK
  DEMO
  FOLLOW_UP
}

/// Tag for categorizing contacts, companies, and deals
model Tag {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  color          String   @default("#6B7280")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contacts     TagsOnContacts[]
  companies    TagsOnCompanies[]
  deals        TagsOnDeals[]

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("tags")
}

// Join tables for many-to-many tag relationships
model TagsOnContacts {
  contactId String
  tagId     String
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([contactId, tagId])
  @@map("tags_on_contacts")
}

model TagsOnCompanies {
  companyId String
  tagId     String
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([companyId, tagId])
  @@map("tags_on_companies")
}

model TagsOnDeals {
  dealId    String
  tagId     String
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([dealId, tagId])
  @@map("tags_on_deals")
}

// =============================================================================
// BOOKINGS & APPOINTMENTS
// =============================================================================

/// Service represents a bookable service offered by an organization
model Service {
  id              String   @id @default(cuid())
  organizationId  String
  name            String
  description     String?  @db.Text
  durationMinutes Int      @default(60)
  price           Decimal  @default(0) @db.Decimal(10, 2)
  currency        String   @default("USD")
  color           String   @default("#3B82F6")
  isActive        Boolean  @default(true)
  requiresPayment Boolean  @default(false)
  bufferBefore    Int      @default(0) // Minutes buffer before appointment
  bufferAfter     Int      @default(0) // Minutes buffer after appointment
  maxAdvanceDays  Int      @default(60) // How far in advance can book
  minNoticeMins   Int      @default(60) // Minimum notice required
  customFields    Json?    // Custom intake form fields
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  providers    ServiceProvider[]
  bookings     Booking[]

  @@index([organizationId])
  @@index([isActive])
  @@map("services")
}

/// ServiceProvider links services to team members who can provide them
model ServiceProvider {
  id        String   @id @default(cuid())
  serviceId String
  userId    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([serviceId, userId])
  @@index([serviceId])
  @@index([userId])
  @@map("service_providers")
}

/// Availability defines when a provider is available for bookings
model Availability {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int      // 0 = Sunday, 6 = Saturday
  startTime String   // "09:00" format
  endTime   String   // "17:00" format
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dayOfWeek])
  @@map("availabilities")
}

/// Booking represents a scheduled appointment
model Booking {
  id               String        @id @default(cuid())
  organizationId   String
  serviceId        String
  providerId       String        // User who provides the service
  contactId        String?       // Link to CRM contact if exists
  status           BookingStatus @default(PENDING)
  startTime        DateTime
  endTime          DateTime
  timezone         String        @default("UTC")
  
  // Guest details (if not linked to contact)
  guestName        String
  guestEmail       String
  guestPhone       String?
  
  // Meeting details
  notes            String?       @db.Text
  internalNotes    String?       @db.Text
  meetingUrl       String?       // Video call link
  location         String?       // Physical location or "Virtual"
  
  // Intake form responses
  customResponses  Json?
  
  // Reminders
  reminderSentAt   DateTime?
  
  // Cancellation
  cancelledAt      DateTime?
  cancelReason     String?
  cancelledBy      String?       // "guest" or "provider"
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  service      Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  provider     User         @relation("ProviderBookings", fields: [providerId], references: [id], onDelete: Cascade)
  contact      Contact?     @relation(fields: [contactId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([serviceId])
  @@index([providerId])
  @@index([contactId])
  @@index([status])
  @@index([startTime])
  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

// =============================================================================
// PAYMENTS & INVOICING
// =============================================================================

/// Product represents a sellable item or service
model Product {
  id              String   @id @default(cuid())
  organizationId  String
  name            String
  description     String?  @db.Text
  price           Int      // Price in cents
  currency        String   @default("usd")
  isActive        Boolean  @default(true)
  isRecurring     Boolean  @default(false)
  recurringInterval String? // day, week, month, year
  
  // Stripe
  stripeProductId String?
  stripePriceId   String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([isActive])
  @@map("products")
}

/// Invoice for billing contacts
model Invoice {
  id              String        @id @default(cuid())
  organizationId  String
  contactId       String
  invoiceNumber   String
  status          InvoiceStatus @default(DRAFT)
  total           Int           // Total in cents
  currency        String        @default("usd")
  dueDate         DateTime
  notes           String?       @db.Text
  
  // Stripe
  stripeInvoiceId String?
  paymentUrl      String?
  
  // Timestamps
  sentAt          DateTime?
  paidAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contact      Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  items        InvoiceItem[]

  @@unique([organizationId, invoiceNumber])
  @@index([organizationId])
  @@index([contactId])
  @@index([status])
  @@map("invoices")
}

model InvoiceItem {
  id          String @id @default(cuid())
  invoiceId   String
  description String
  quantity    Int    @default(1)
  unitAmount  Int    // Price per unit in cents
  total       Int    // quantity * unitAmount

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_items")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

// =============================================================================
// NOTIFICATIONS
// =============================================================================

/// Notification represents an in-app notification for a user
model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?          // Optional link to navigate to
  read      Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  TEAM_INVITE
  DEAL_UPDATE
  BOOKING_NEW
  BOOKING_CANCELLED
  PAYMENT_RECEIVED
  MENTION
}

// =============================================================================
// AUTOMATIONS
// =============================================================================

/// Automation represents a workflow that runs automatically based on triggers
model Automation {
  id             String           @id @default(cuid())
  organizationId String
  name           String
  description    String?
  triggerType    AutomationTrigger
  triggerConfig  Json?            // Additional trigger configuration
  actionType     AutomationAction
  actionConfig   Json?            // Additional action configuration (email template, tag names, etc.)
  status         AutomationStatus @default(ACTIVE)
  executions     Int              @default(0)
  lastRunAt      DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([status])
  @@map("automations")
}

enum AutomationTrigger {
  CONTACT_CREATED        // New contact added
  CONTACT_TAG_ADDED      // Tag added to contact
  DEAL_CREATED           // New deal created
  DEAL_STAGE_CHANGED     // Deal moves to different stage
  DEAL_WON               // Deal marked as won
  DEAL_LOST              // Deal marked as lost
  BOOKING_CREATED        // New booking made
  BOOKING_CONFIRMED      // Booking confirmed
  BOOKING_CANCELLED      // Booking cancelled
  PAYMENT_RECEIVED       // Payment completed
  FORM_SUBMITTED         // Form submission received
}

enum AutomationAction {
  SEND_EMAIL             // Send an email
  ADD_TAG                // Add tag to contact
  REMOVE_TAG             // Remove tag from contact
  UPDATE_CONTACT_STATUS  // Update contact status
  CREATE_TASK            // Create a follow-up task
  SEND_NOTIFICATION      // Send in-app notification
  WEBHOOK                // Call external webhook
  DELAY                  // Wait for specified time
}

enum AutomationStatus {
  ACTIVE
  PAUSED
  DRAFT
}

// =============================================================================
// FUNNELS & LANDING PAGES
// =============================================================================

/// Funnel represents a marketing/sales funnel with multiple steps
model Funnel {
  id             String       @id @default(cuid())
  organizationId String
  name           String
  slug           String       // URL-friendly identifier
  description    String?
  type           FunnelType
  status         FunnelStatus @default(DRAFT)
  
  // Analytics
  visitors       Int          @default(0)
  conversions    Int          @default(0)
  revenue        Int          @default(0) // In cents
  
  // Settings
  primaryColor   String       @default("#3B82F6")
  logoUrl        String?
  faviconUrl     String?
  customDomain   String?
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  steps        FunnelStep[]

  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([status])
  @@map("funnels")
}

/// FunnelStep represents a page/step within a funnel
model FunnelStep {
  id          String         @id @default(cuid())
  funnelId    String
  name        String
  type        FunnelStepType
  order       Int
  
  // Page content
  headline    String?
  subheadline String?
  content     Json?          // Rich content blocks
  
  // Form fields (for opt-in steps)
  formFields  Json?
  
  // CTA settings
  ctaText     String?
  ctaUrl      String?
  
  // Analytics for this step
  views       Int            @default(0)
  completions Int            @default(0)
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  funnel Funnel @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@index([funnelId])
  @@index([order])
  @@map("funnel_steps")
}

enum FunnelType {
  LEAD_MAGNET         // Free resource download
  CONSULTATION        // Book a call
  FREE_TRIAL          // Sign up for trial
  DIRECT_PURCHASE     // Buy now
  WEBINAR             // Register for webinar
  WAITLIST            // Join waitlist
}

enum FunnelStepType {
  LANDING_PAGE        // Main landing page
  OPT_IN_FORM         // Email capture form
  SALES_PAGE          // Long-form sales page
  CHECKOUT            // Payment page
  UPSELL              // One-click upsell
  DOWNSELL            // Alternative offer
  THANK_YOU           // Confirmation page
  CALENDAR            // Booking calendar
}

enum FunnelStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

// =============================================================================
// PROJECTS & TASKS
// =============================================================================

/// Project represents a collection of tasks and milestones
model Project {
  id             String        @id @default(cuid())
  organizationId String
  name           String
  description    String?       @db.Text
  status         ProjectStatus @default(ACTIVE)
  color          String        @default("#3B82F6")
  startDate      DateTime?
  endDate        DateTime?
  budget         Decimal?      @db.Decimal(12, 2)
  progress       Int           @default(0) // 0-100
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  tasks        Task[]
  milestones   Milestone[]

  @@index([organizationId])
  @@index([status])
  @@map("projects")
}

/// Task represents a work item within a project
model Task {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  description String?      @db.Text
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  startDate   DateTime?
  order       Int          @default(0)
  progress    Int          @default(0) // 0-100
  estimatedHours Decimal?   @db.Decimal(10, 2)
  actualHours   Decimal?   @db.Decimal(10, 2)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignedTo User?        @relation("AssignedTasks", fields: [assignedToId], references: [id], onDelete: SetNull)
  assignedToId String?
  dependsOn   Task?       @relation("TaskDependencies", fields: [dependsOnId], references: [id], onDelete: SetNull)
  dependsOnId String?
  dependentTasks Task[]   @relation("TaskDependencies")

  @@index([projectId])
  @@index([status])
  @@index([assignedToId])
  @@map("tasks")
}

/// Milestone represents a significant point in a project
model Milestone {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  description String?  @db.Text
  dueDate     DateTime
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("milestones")
}

enum ProjectStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

